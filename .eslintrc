{
  "extends": ["xo", "xo-react"],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true,
      "ecmaFeatures": {
        "jsx": true
      }
    }
  },
  "rules": {
    "react/no-unused-prop-types": 0,
    "react/forbid-component-props": 0,
    "react/destructuring-assignment": 0,
    "react/jsx-one-expression-per-line": 0,
    "indent": ["error", 2],
    "camelcase": "off",
    "new-cap": "off",
    "comma-dangle": "error"
  },
  "globals": {
    "window": true,
    "document": true,
    "fetch": true,
    "google": true,
    "navigator": true
  },
  "env": {
    "jest/globals": true
  },
  "plugins": ["react", "babel", "import", "jest"]
}
